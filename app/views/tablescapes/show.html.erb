<div class="container">
  <div class="product">
    <% if @tablescape.photo.attached? %>
      <%= cl_image_tag @tablescape.photo.key, class: "card-img-top" %>
    <% else %>
      <img src="https://d28m5bx785ox17.cloudfront.net/v1/img/uSL6tH9bMD9kUaI9P9XsdtpG6H1F2fyMaTEtKa2TzQ0=/d/l" class="main-image" alt="">
    <% end %>
    <div class="tablescape-description">
      <h2><%=  @tablescape.name%></h2>
      <h3><%= @tablescape.tag %></h3>
      <p><%= @tablescape.description %></p>
      <h4>Items:</h4>
      <% @items.each do |item| %>
        <span><%= item.name %></span>
      <% end %>
      <div class="price">Â£<%= @tablescape.price_per_person %></div>
    </div>
    <%= link_to "Update your tablescape?", edit_tablescape_path  %>
  </div>
  <div class="reserve-form">
    <%= simple_form_for [@tablescape, @booking] do |f| %>
      <%= f.input :date_from%>
      <%= f.input :date_to%>
      <%= f.input :attendees %>
      <%= f.submit "Reserve", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Delete', tablescape_path, data: {confirm: "Are you sure?"}, method: :delete %>


