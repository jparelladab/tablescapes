<% if tablescape.photos.attached? %>
  <div id="map-carousel-<%= tablescape.id %>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% tablescape.photos.each_with_index do |photo, i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>">
        <%= cl_image_tag photo.key, class: "popup-image-carousel d-block w-100" %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#map-carousel-<%= tablescape.id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#map-carousel-<%= tablescape.id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
  <% else %>
  <img class="popup-image" src="<%= tablescape.image %>" alt="dinner set">
<% end %>

<div class="card-body">
  <div class="flex">
    <h5 class="card-title"><%= tablescape.name %></h5>
    <div class="price_tag">
      <p>Â£<%= tablescape.price_per_person %> pp</p>
    </div>
  </div>
  <p class="category_tag"> <%= tablescape.tag %> </p>
  <p class="card-text"><%= tablescape.description %></p>
  <%= link_to "See details", tablescape_path(tablescape), class: "btn btn-success"%>
</div>
