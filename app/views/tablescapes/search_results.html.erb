<h1 class="searchpage-heading"> Tablescape sets </h1>

<ul id="tabs">
    <li><a href="#" name="tab1">Results</a></li>
    <li><a href="#" name="tab2">Map</a></li>
</ul>
<!-- Content wrapper for tabs.-->
<div id="content">
  <div id="tab1">

  <div container>
    <div row class="search-row">
      <div col-12 col-md-6>
        <div class="searchcards">
          <% @tablescapes.each do |t| %>
            <div class="searchcard">
              <% if t.photos.attached? %>
                <div id="carousel-<%= t.id %>" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <% t.photos.each_with_index do |photo, i| %>
                      <div class="carousel-item <%= 'active' if i == 0 %>">
                        <%= cl_image_tag photo.key, class: "card-img-top d-block w-100" %>
                      </div>
                    <% end %>
                  </div>
                  <a class="carousel-control-prev" href="#carousel-<%= t.id %>" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carousel-<%= t.id %>" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              <% else %>
                <img class="searchcard-img-top" src="<%= t.image %>" alt="dinner set">
              <% end %>
              <div class="searchcard-body">
              <div class="flex">
               <h5 class="searchcard-title"><%= t.name.capitalize %></h5>
                 <div class="search-price_tag">
                  <p>Â£<%= t.price_per_person %> pp</p>
                 </div>
              </div>
              <div class="searchcard-text">
                <p><%= t.description %></p>
              </div>
              <%= link_to "See details", tablescape_path(t), class: "btn btn-secondary btn-details-search"%>
              </div>
            </div>

          <% end %>
          <div class="add_placeholder" style="width: 18rem;">
            <!-- <a href="#" class="btn btn-secondary">Add new tablescape</a> -->
            <%= link_to "+", new_tablescape_path, class: "btn-add-index"%>
            <div class="add_new_text">
            <p> Add new tablescape </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="tab2">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
<!-- Content wrapper for tabs.-->
  </div>
</div>


