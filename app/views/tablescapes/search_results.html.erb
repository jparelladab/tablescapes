<h1 class="searchpage-heading"> Tablescape sets </h1>

  <div container>
    <div row class="search-row">
      <div col-12 col-md-6>
        <div class="searchcards">
          <% @tablescapes.each do |t| %>
            <div class="searchcard">
              <% if t.photos.attached? %>
                <%= cl_image_tag photo.key, class: "card-img-top" %>
              <% else %>
                <img class="searchcard-img-top" src="<%= t.image %>" alt="dinner set">
              <% end %>
              <div class="searchcard-body">
              <div class="flex">
               <h5 class="searchcard-title"><%= t.name.capitalize %></h5>
                 <div class="search-price_tag">
                  <p>Â£<%= t.price_per_person %> pp</p>
                 </div>
              </div>
              <div class="searchcard-text">
                <p><%= t.description %></p>
              </div>
              <%= link_to "See details", tablescape_path(t), class: "btn btn-success btn-details"%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>



